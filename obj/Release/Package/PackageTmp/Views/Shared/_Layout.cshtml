    <script>
        function Cikis(t) {
            $.post('/Home/Cikis', function (data) {
                if (data) {
                    demo.showNotification("Çıkış başarılı.", "top", "center", "success");
                    setTimeout(function () {
                        window.location.reload();
                    }, 1000);
                } else {
                    demo.showNotification("Çıkış Yapılamadı.", "top", "center", "danger");
                }
            }).fail(function (a, b, c) {
                demo.showNotification("Çıkış Yapılamadı. (<strong>Hata:</strong> " + a.status + " " + a.statusText + ")", "top", "center", "danger");
            });
        }

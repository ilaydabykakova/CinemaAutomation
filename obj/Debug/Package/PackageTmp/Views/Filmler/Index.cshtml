@{
    ViewBag.Title = "Filmler";
    var Filmler = (new CinemaAutomation.Models.CinemaAutomationEntities()).Filmler.ToList();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header" data-background-color="orange">
                    <h4 class="title"><b>Salonlar</b></h4>
                </div>
                <div class="card-content table-responsive">
                    <table class="table">
                        <thead class="text-primary">
                            <tr>
                                <th>Resim</th>
                                <th>Film Adı</th>
                                <th>Açıklama</th>
                                <th>IMDB Puanı</th>
                                <th>Vizyon Tarihi</th>
                                <th>Yıldız</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Filmler.Count() == 0)
                            {
                                <tr>
                                    <td colspan="7">
                                        <div class="alert alert-danger" role="alert">Film bulunmamaktadır.</div>
                                    </td>
                                </tr>
                            }
                            @foreach (var item in Filmler)
                            {
                                <tr>
                                    <td><img style="width: 60px" src="~/Assets/Uploads/@item.Resim" /></td>
                                    <td>@item.FilmAdi</td>
                                    <td>@item.Aciklama</td>
                                    <td>@item.IMDBPuani</td>
                                    <td>@item.VizyonTarihi</td>
                                    <td>@item.Yildiz</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="clearfix"></div>
            <a href="/Sinemalar/Yeni" class="btn btn-warning pull-right">YENİ EKLE<div class="ripple-container"></div></a>
        </div>
    </div>
</div>
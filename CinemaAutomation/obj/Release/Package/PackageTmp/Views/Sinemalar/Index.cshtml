@{
    ViewBag.Title = "Sinemalar";
    var Sinemalar = (new CinemaAutomation.Models.CinemaAutomationEntities()).Sinemalar.ToList();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header" data-background-color="orange">
                    <h4 class="title"><b>Salonlar</b></h4>
                </div>
                <div class="card-content table-responsive">
                    <table class="table">
                        <thead class="text-primary">
                            <tr>
                                <th>Sinema Adı</th>
                                <th class="text-center">Şehir</th>
                                <th class="text-center">İlçe</th>
                                <th class="text-center">Salon Sayısı</th>
                            </tr>
                        </thead>
                            @if (Sinemalar.Count() == 0)
                            {
                                <tr>
                                    <td colspan="7">
                                        <div class="alert alert-danger" role="alert">Sinema bulunmamaktadır.</div>
                                    </td>
                                </tr>
                            }
                            @foreach (var item in Sinemalar)
                            {
                                <tr>
                                    <td>@item.Baslik</td>
                                    <td class="text-center">@item.Sehir</td>
                                    <td class="text-center">@item.Ilce</td>
                                    <td class="text-center">@item.Salonlar.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="clearfix"></div>
            <a href="/Sinemalar/Yeni" class="btn btn-warning pull-right">YENİ EKLE<div class="ripple-container"></div></a>
        </div>
    </div>
</div>